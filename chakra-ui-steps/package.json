{
  "version": "1.6.2",
  "license": "MIT",
  "name": "chakra-ui-steps",
  "author": "Jean Verster",
  "keywords": [
    "steps",
    "stepper",
    "chakra",
    "navigation",
    "multi"
  ],
  "main": "./dist/chakra-ui-steps.umd.js",
  "module": "./dist/chakra-ui-steps.es.js",
  "typings": "dist/index.d.ts",
  "description": "Steps component designed to work seamlessly with Chakra UI",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/chakra-ui-steps.es.js",
      "require": "./dist/chakra-ui-steps.umd.js"
    }
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build-storybook": "build-storybook",
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "prestorybook": "rimraf node_modules/.cache/storybook",
    "preview": "vite preview",
    "push": "yalc push",
    "size": "size-limit",
    "start:concurrent": "concurrently \"tsdx watch\"  \"yarn watch\"",
    "start": "tsdx watch",
    "storybook": "start-storybook -p 6006",
    "test": "tsdx test --passWithNoTests",
    "watch": "nodemon --exec \"yarn push\""
  },
  "peerDependencies": {
    "@chakra-ui/react": ">=1.6.7",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "framer-motion": "^5",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "homepage": "https://github.com/jeanverster/chakra-ui-steps",
  "size-limit": [
    {
      "path": "dist/chakra-ui-steps.cjs.production.min.js",
      "limit": "1 s"
    },
    {
      "path": "dist/chakra-ui-steps.esm.js",
      "limit": "1 s"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@chakra-ui/react": "^1.6.10",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@size-limit/preset-big-lib": "^4.12.0",
    "@size-limit/preset-small-lib": "^4.11.0",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@types/jest-axe": "^3.5.1",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@vitejs/plugin-react": "^1.0.7",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "framer-motion": "^6.2.1",
    "husky": "^6.0.0",
    "jest-axe": "^4.1.0",
    "nodemon": "^2.0.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-is": "^17.0.2",
    "rimraf": "^3.0.2",
    "size-limit": "^4.11.0",
    "storybook-addon-performance": "^0.16.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vite-dts": "^1.0.4",
    "yalc": "^1.0.0-pre.53"
  },
  "release": {
    "branches": [
      "develop"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git"
    ]
  }
}
